@model List<ProyDentoWeb.Models.User>

@{ ViewData["Title"] = "Index"; }

<h1>Usuarios Registrados</h1>

<div class="table">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Contraseña</th>
            </tr>
        </thead>
        <tbody>
            @foreach (User item in Model)
            {
                <tr>
                    <td>@item.idUsuario</td>
                    <td>@item.Usuario</td>
                    <td>@item.Password</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>
